{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "jquery": true
    },
    "parser": "typescript-eslint-parser",
    "parserOptions": {
        "ecmaVersion": 2017,
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "globals": {
        "test": true
    },
    "plugins": [
        "typescript"
    ],
    "rules": {
        "typescript/no-unused-vars": "warn",
        "camelcase": [1,{ "properties": "always" }],
        "eqeqeq": "warn",
        "semi": "warn",
        "indent": ["warn", 4, { "SwitchCase": 1 }],
        "no-const-assign": "warn",
        "no-this-before-super": "warn",
        "quotes": ["error", "single"],
        "no-undef": "warn",
        "no-unreachable": "warn",
        "no-unused-vars": "warn",
        "constructor-super": "warn",
        "valid-typeof": "warn"
    }
}